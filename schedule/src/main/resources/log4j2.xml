<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name = "Console" target = "SYSTEM_OUT">
            <PatternLayout pattern = "%d{HH:mm:ss} [%t] %-5level %-60c{1.} - %msg %n"/>
        </Console>

        <File name = "File" filename = "Schedule.log">
            <PatternLayout pattern = "%d{HH:mm:ss} [%t] %-5level %-60c{1.} - %msg %n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level = "info">
            <AppenderRef ref = "Console"/>
            <AppenderRef ref = "File"/>
        </Root>
    </Loggers>
</Configuration>